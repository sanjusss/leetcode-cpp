{
    "tasks": [
        {
            "type": "shell",
            "label": "GCC构建当前文件",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/out/unittest",
                "-I",
                "${workspaceFolder}/include",
                "-std=c++17",
                "-lstdc++"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}